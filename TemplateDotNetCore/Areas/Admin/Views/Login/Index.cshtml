<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Đăng nhập vào trang quản trị hệ thống</title>
    <meta name="description" content="Admin Login Page">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="apple-touch-icon" href="apple-icon.png">
    <link rel="shortcut icon" href="favicon.ico">

    <link rel="stylesheet" href="~/admin-side/assets/css/normalize.css">
    <link rel="stylesheet" href="~/admin-side/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/admin-side/assets/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/admin-side/assets/css/themify-icons.css">
    <link rel="stylesheet" href="~/admin-side/assets/css/flag-icon.min.css">
    <link rel="stylesheet" href="~/admin-side/assets/css/cs-skin-elastic.css">
    <!-- <link rel="stylesheet" href="~/admin-side/assets/css/bootstrap-select.less"> -->
    <link rel="stylesheet" href="~/admin-side/assets/scss/style.css">

    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>

    <!-- <script type="text/javascript" src="https://cdn.jsdelivr.net/html5shiv/3.7.3/html5shiv.min.js"></script> -->

    <link href="~/lib/notifyjs/dist/styles/metro/notify-metro.css" rel="stylesheet" />

</head>
<body class="bg-dark">


    <div class="sufee-login d-flex align-content-center flex-wrap">
        <div class="container">
            <div class="login-content">
                <div class="login-logo">
                    <a href="index.html">
                        <img class="align-content" src="~/admin-side/images/logo.png" alt="">
                    </a>
                </div>
                <div class="login-form">
                    <form id="frmLogin">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label>Tên đăng nhập</label>
                            <input type="text" class="form-control" name="userName" id="txtUserName" placeholder="Tên đăng nhập">
                        </div>
                        <div class="form-group">
                            <label>Mật khẩu</label>
                            <input type="password" class="form-control" name="password" id="txtPassword" placeholder="Mật khẩu">
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="cbRemember"> Lưu mật khẩu khi đăng nhập
                            </label>
                            <label class="pull-right">
                                <a href="#">Bạn đã quên mật khẩu?</a>
                            </label>

                        </div>
                        <button type="submit" class="btn btn-success btn-flat m-b-30 m-t-30" id="btnLogin">Đăng nhập</button>
                        <!--
                            <div class="social-login-content">
                            <div class="social-button">
                                <button type="button" class="btn social facebook btn-flat btn-addon mb-3"><i class="ti-facebook"></i>Sign in with facebook</button>
                                <button type="button" class="btn social twitter btn-flat btn-addon mt-2"><i class="ti-twitter"></i>Sign in with twitter</button>
                            </div>
                        </div>
                        -->
                        <!--
                        <div class="register-link m-t-15 text-center">
                            <p>Don't have account ? <a href="#"> Sign Up Here</a></p>
                        </div>
                        -->

                    </form>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
    <script type="text/javascript" src="~/lib/notifyjs/dist/notify.js"></script>
    <script type="text/javascript" src="~/lib/notifyjs/dist/styles/metro/notify-metro.js"></script>
    <script type="text/javascript" src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script type="text/javascript" src="~/lib/jquery-validation/dist/additional-methods.js"></script>
    <script type="text/javascript" src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script type="text/javascript" src="~/admin-app/shared/common.js"></script>
    <script type="text/javascript" src="~/admin-app/controllers/login/index.js"></script>

    <script>
        var login = new loginController();
        login.initialize();
    </script>
</body>
</html>

