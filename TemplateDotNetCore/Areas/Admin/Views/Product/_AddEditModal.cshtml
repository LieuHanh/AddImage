<div id="modal-add-edit" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal-title">Thêm / Chinh sửa</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body card-block">
                            <div class="form-group">
                                <input type="hidden" id="hidIdM" value="0" />
                                <label for="txtNameM" class=" form-control-label">Tên</label>
                                <input type="text" id="txtNameM" placeholder="Nhập tên của sản phẩm" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="txtNameM" class=" form-control-label">Danh mục</label>
                                <input type="text" id="txtCategoryIdM" placeholder="Nhập danh mục của sản phẩm" class="form-control">
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="txtDescM" class=" form-control-label">Mô tả</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <textarea name="txtDescM" id="txtDescM" rows="9" placeholder="Nhập nội dung..." class="form-control"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txtUnitM" class=" form-control-label">Đơn vị tiền tệ</label>
                                <input type="text" id="txtUnitM" placeholder="Nhập đơn vị" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="txtPriceM" class=" form-control-label">Giá chính thức</label>
                                <input type="text" id="txtPriceM" placeholder="Nhập giá" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="txtPromotionPriceM" class=" form-control-label">Giá khuyến mãi</label>
                                <input type="text" id="txtPromotionPriceM" placeholder="Nhập giá" class="form-control">
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3"><label for="file-input" class=" form-control-label">Hình ảnh</label></div>
                                <div class="col-12 col-md-9"><input type="file" id="file-input" name="file-input" class="form-control-file"></div>
                            </div>

                            <div class="row form-group">
                                <div class="col-8">
                                    <div class="form-group">
                                        <label for="city" class=" form-control-label">City</label>
                                        <input type="text" id="city" placeholder="Enter your city" class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txtContentM" class=" form-control-label">Nội dung</label>
                                <input type="text" id="txtContentM" placeholder="Nhập nội dung" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="txtMetakeywordM" class=" form-control-label">Tiêu đề SEO</label>
                                <input type="text" id="txtMetakeywordM" placeholder="Nhập tiêu đề SEO" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="txtSeoAliasM" class=" form-control-label">Liên kết SEO</label>
                                <input type="text" id="txtSeoAliasM" placeholder="Nhập liên kết SEO" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="txtMetakeywordM" class=" form-control-label">Từ khóa SEO</label>
                                <input type="text" id="txtMetakeywordM" placeholder="Nhập từ khóa SEO" class="form-control">
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="txtMetaDescriptionM" class=" form-control-label">Mô tả SEO</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <textarea name="txtMetaDescriptionM" id="txtMetaDescriptionM" rows="9" placeholder="Nhập nội dung..." class="form-control"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txtTagM" class=" form-control-label">Tag của sản phẩm (cách nhau bằng dấu phẩy)</label>
                                <input type="text" id="txtTagM" placeholder="Nhập tags" class="form-control">
                            </div>

                            <div class="row form-group">
                                <div class="col-4">
                                    <span>Kích hoạt</span>
                                    <label class="switch switch-3d switch-primary mr-3">
                                        <input type="checkbox" class="switch-input" id="ckStatusM" checked="true">
                                        <span class="switch-label"></span>
                                        <span class="switch-handle"></span>
                                    </label>
                                </div>
                                <div class="col-4">
                                    <span>Sản phẩm HOT</span>
                                    <label class="switch switch-3d switch-primary mr-3">
                                        <input type="checkbox" class="switch-input" id="ckHotM" checked="true">
                                        <span class="switch-label"></span>
                                        <span class="switch-handle"></span>
                                    </label>
                                </div>
                                <div class="col-4">
                                    <span>Hiển thị trang chủ</span>
                                    <label class="switch switch-3d switch-primary mr-3">
                                        <input type="checkbox" class="switch-input" id="ckShowHomeM" checked="true">
                                        <span class="switch-label"></span>
                                        <span class="switch-handle"></span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnCancel" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" id="btnSave" class="btn btn-primary">Confirm</button>
            </div>
        </div>
    </div>
</div>