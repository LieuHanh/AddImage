@section Styles{
    <link rel="stylesheet" href="~/admin-side/assets/css/lib/datatable/dataTables.bootstrap.min.css">
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Dashboard</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="#">Dashboard</a></li>
                    <li><a href="#">Table</a></li>
                    <li class="active">Data table</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Data Table</strong>
                    </div>
                    <div class="card-body">

                        <div class="row form-group">
                            <div class="col col-md-3"><label for="select" class=" form-control-label"><strong>Lọc danh sách theo danh mục</strong></label></div>
                            <div class="col-12 col-md-7">
                                <select name="select" id="global_filter" class="form-control">
                                    <option value="0">--Chọn danh mục--</option>
                                </select>
                            </div>
                        </div>

                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Tên</th>
                                    <th>Thuộc danh mục</th>
                                    <th>Giá</th>
                                    <th>Ngày đã tạo</th>
                                    <th>Trạng thái</th>
                                    <th>cập nhật</th>
                                    <th>xóa</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div><!-- .content -->

@section Scripts{

    <script src="~/admin-side/assets/js/lib/data-table/datatables.min.js"></script>
    <script src="~/admin-side/assets/js/lib/data-table/dataTables.bootstrap.min.js"></script>
    <script src="~/admin-side/assets/js/lib/data-table/dataTables.buttons.min.js"></script>
    <script src="~/admin-side/assets/js/lib/data-table/buttons.bootstrap.min.js"></script>
    <script src="~/admin-side/assets/js/lib/data-table/jszip.min.js"></script>
    <script src="~/admin-side/assets/js/lib/data-table/pdfmake.min.js"></script>
    <script src="~/admin-side/assets/js/lib/data-table/vfs_fonts.js"></script>
    <script src="~/admin-side/assets/js/lib/data-table/buttons.html5.min.js"></script>
    <script src="~/admin-side/assets/js/lib/data-table/buttons.print.min.js"></script>
    <script src="~/admin-side/assets/js/lib/data-table/buttons.colVis.min.js"></script>
    <script src="~/lib/notifyjs/dist/notify.js"></script>
    <script src="~/admin-app/controllers/product/index.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#bootstrap-data-table-export').DataTable();
            var product = new productController();
            product.initialize();
        });
    </script>
}